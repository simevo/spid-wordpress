{
    "name": "italia/spid-wordpress",
    "description": "SPID (Sistema Pubblico di IdentitÃ  Digitale) Wordpress plugin",
    "type": "library",
    "license": "AGPL-3.0",
    "authors": [{
        "name": "Paolo Greppi",
        "email": "paolo.greppi@libpf.com"
    }],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/italia/spid-php-lib"
        }
    ],
    "require": {
        "php": ">=7.0",
        "italia/spid-php-lib": "dev-feature/issue-65-certs#0b58ecd32b4909ff207f2a47b3dcac8b7507b2fb as 0.30.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "wp-coding-standards/wpcs": "*",
        "phpunit/phpunit": "6.*",
        "wimg/php-compatibility": "^9.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.3"
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "phpcs": [
            "phpcs -s -p"
        ],
        "phpcbf": [
            "phpcbf -p"
        ]
    },
    "extra": {
        "scripts-description": {
            "test": "Run unit tests",
            "phpcs": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
            "phpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier"
        }
    }
}
